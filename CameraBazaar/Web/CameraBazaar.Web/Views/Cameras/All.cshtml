@using System.Web.Mvc.Html
@model IList<CameraBazaar.Web.ViewModels.Cameras.CameraViewModel>

@{
    ViewBag.Title = "All";
}

<h2>All</h2>

<p>
    @Html.ActionLink("Add Camera", "Add")
</p>
<br />
<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model[i];

        Html.RenderPartial("_CameraOverview",item);

        if (i + 1 % 3 == 0)
        {
            @:</div>
            @:<div class="row">
        }
    }
</div>
