@model IEnumerable<LearningSystem.Web.Models.ViewModels.Users.EditUserViewModel>

@{
    ViewBag.Title = "ManageRoles";
}

<h2>ManageRoles</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <p>Actions</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id ,area="Admin"}) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, area = "Admin" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, area = "Admin" })
            </td>
        </tr>
    }

</table>
