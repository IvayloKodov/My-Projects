@model ZooRestaurant.Web.Common.Models.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="col-md-offset-2 col-md-10">
                <h2>@ViewBag.Title:</h2>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Firstname, htmlAttributes: new { @class = "col-md-2 control-label" })
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                        @Html.EditorFor(m => m.Firstname, null, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                        @Html.EditorFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                        @Html.EditorFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                        @Html.EditorFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.EditorFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.EditorFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.EditorFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Towns, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.DropDownListFor(m => m.TownId, @Model.Towns, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

            //TODO get neighborhoods of current selected town!~
            @*<div class="form-group">
                    @Html.LabelFor(m => "Квартал", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.DropDownListFor(m => "NeighborhoodId", @Model.Towns, new { @class = "form-control" })
                        </div>
                    </div>
                </div>*@

            <div class="form-group">
                @Html.LabelFor(m => m.AdditionalAddress, new { @class = "col-md-2 control-label" })
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                        @Html.EditorFor(m => m.AdditionalAddress, new { @class = "form-control" })
                    </div>
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.EditorFor(m => m.Comment, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Register" />
                    </div>
                </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
