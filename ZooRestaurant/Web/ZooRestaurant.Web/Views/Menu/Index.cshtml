@using PagedList.Mvc
@model PagedList.IPagedList<ZooRestaurant.Web.Models.ViewModels.Meals.MealViewModel>
@{
    ViewBag.Title = "Меню";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

@section Styles{
    <link href="~/Content/Css/equal-height-columns.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-offset-8 col-md-4">
        @using (Ajax.BeginForm("Search", null,
            new AjaxOptions
            {
                UpdateTargetId = "content",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST"
            }, new { id = "searchForm" }))
        {
            <div class="form-inline">
                <input class="form-control" type="text" name="query" oninput="changed()" />
                <input type="submit" class="btn btn-info" value="Търсене" />
            </div>
        }
    </div>
</div>

<div id="content">
    @Html.Partial("_MealsResults", @Model)
</div>

<div class="row">
    @Html.PagedListPager(Model, page => Url.Action("Dishes", new { page }))
</div>

@section Scripts{
    <script>
        function changed() {
            $("#searchForm").submit();
        }
    </script>
}