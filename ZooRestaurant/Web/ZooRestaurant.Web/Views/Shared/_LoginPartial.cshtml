@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Здравей, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Излез</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
            <li><a href="/Account/Register" id="registerLink"><i class="fa fa-user" aria-hidden="true"></i> Регистрация</a></li>
            <li><a href="/Account/Login" id="loginLink"><i class="fa fa-sign-in" aria-hidden="true"></i> Влез</a></li>
        </ul>
}
