@model ZooRestaurant.Web.Models.ViewModels.Meals.MealViewModel

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Action("GetImage","Images",new {id=@Model.Id})" alt="dish.png">
        <div class="caption">
            <h4>@Model.Name</h4>
            <p>
                <a style="font-size: 1.4em"><strong>@Model.Price лв.</strong></a>
                <a href="#" class="btn btn-danger pull-right">Поръчай<i class="fa fa-shopping-cart"></i></a>
                <a href="/Meals/@Model.Id/Details" class="btn btn-danger pull-right">Детайли<i class="fa fa-arrow-circle-right"></i></a>
            </p>
        </div>
    </div>
</div>